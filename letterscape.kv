#:kivy 1.11.1
#: import StartButtonWidget widgets 
#: import Window kivy.core.window 

<HomeScreen>:
    canvas.before:
        Color:
            rgba: 0.110, 0.129, 0.188, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            font_name: "fonts/zekton.ttf"
            text: "LetterQuest"
            size_hint: .5, .1
            pos_hint: {"x":.25,"top":.75}
            font_size: 70
        StartButtonWidget:
            font_name: "fonts/zekton.ttf"
            screen: root
            text: "Start"
            size_hint: .5, .1
            pos_hint: {"x":.25,"top":.5}
            
<StartButtonWidget>:
    Label:
        canvas:
            Color:
                rgba: [0.176, 0.804, 0.796, 1]
            Line:
                width: dp(2)
                rounded_rectangle: (self.x, self.y, self.width, self.height, 20)
                joint: 'round'
        font_name: "fonts/zekton.ttf"
        text: root.text  
        size: root.size
        pos: root.pos

<LetterScapeGameWidget>:
    canvas.before:
        Color:
            rgba: 0.110, 0.129, 0.188, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation:'vertical'
        size: root.size
        pos: root.pos
        BoxLayout:
            size_hint: 1, 0.1
        BoxLayout:
            orientation:'horizontal'
            size_hint: 1, 0.2
            Label:
                canvas.before:
                    Color:
                        rgba: 0.176, 0.804, 0.796, 1
                    Line:
                        width: dp(1)
                        circle: (self.center_x, self.center_y, (self.height-10)/2)
                font_name: "fonts/zekton.ttf"
                color: [0.176, 0.804, 0.796, 1]
                text: str(root.level)
                font_size: 50
            Label:
                canvas.before:
                    Color:
                        rgba: 0.176, 0.804, 0.796, 1
                    Line:
                        width: dp(1)
                        circle: (self.center_x, self.center_y, (self.height-10)/2)
                    Line:
                        width: dp(3)
                        cap: 'round'
                        circle: (self.center_x, self.center_y, (self.height-10)/2, 0, 360 * ((root.challenge-1) / (root.level_challenges if root.level_challenges > 0 else 1)))
                font_name: "fonts/zekton.ttf"
                color: [0.176, 0.804, 0.796, 1]
                text: str(root.challenge)
                font_size: 50 
            Label:
                canvas.before:
                    Color:
                        rgba: 0.176, 0.804, 0.796, 1
                    Line:
                        width: dp(1)
                        circle: (self.center_x, self.center_y, (self.height-10)/2)
                    Line:
                        width: dp(3)
                        cap: 'round'
                        circle: (self.center_x, self.center_y, (self.height-10)/2, (30 * (root.timer % 12)), (30 * (root.timer % 12)) + 30)
                font_name: "fonts/zekton.ttf"
                color: [0.176, 0.804, 0.796, 1]
                text: str(root.timer)
                font_size: 50
        Label:
            font_name: "fonts/zekton.ttf"
            color: [0.176, 0.804, 0.796, 1]
            size_hint: 1, 0.2
            text: str(root.word)
            font_size: 70   
        GridLayout:
            id: glTiles
            spacing: dp(5),dp(5)
            padding: dp(10)
        BoxLayout:
            size_hint: 1, 0.30
        

<TileWidget>:
    canvas:
        Color:
            rgba: self.c
        Line:
            width: dp(1)
            rounded_rectangle: (self.x, self.y, self.width, self.height, 20)
            joint: 'round'
    Label:
        font_name: "fonts/zekton.ttf"
        color: root.c
        center: root.center
        text: root.letter
        font_size: 70 


