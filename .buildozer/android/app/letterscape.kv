#:kivy 1.11.1
#: import StartButtonWidget widgets 
#: import Window kivy.core.window 

<MyLabel@Label>:
    font_name: "fonts/zekton.ttf"
         
<HomeScreen>:
    btn_start: btn_start
    canvas.before:
        Color:
            rgba: 0.110, 0.129, 0.188, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            font_name: "fonts/zekton.ttf"
            text: "Letter\nTrek"
            halign: 'center'
            markup: True
            size_hint: .5, .1
            pos_hint: {"x":.25,"top":.75}
            font_size: dp(60)
        StartButtonWidget:
            id: btn_start
            font_name: "fonts/zekton.ttf"
            font_size: dp(20)
            screen: root
            text: "Start"
            size_hint: .5, .1
            pos_hint: {"x":.25,"top":.5}
            on_touch_up: root.btn_start_on_touch_up(*args)

<ChallengeCompletedScreen>:
    btn_continue: btn_continue
    lbl_challenge_completed: lbl_challenge_completed
    lbl_level: lbl_level
    lbl_challenge: lbl_challenge
    canvas.before:
        Color:
            rgba: 0.110, 0.129, 0.188, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        MyLabel:
            id: lbl_challenge_completed
            text: "Challenge \ncompleted!"
            halign: "left"
            size_hint: .5, .1
            pos_hint: {"x":.15,"top":.84}
            font_size: dp(35)
        MyLabel:
            id: lbl_level
            text_size: self.size
            text: "Level: 1"
            halign: "left"
            size_hint: .5, .1
            pos_hint: {"x":.15,"top":.75}
            font_size: dp(20)
        MyLabel:
            id: lbl_challenge
            text: "Challenge: 1"
            text_size: self.size
            halign: "left"
            size_hint: .5, .1
            pos_hint: {"x":.15,"top":.70}
            font_size: dp(20)        
        StartButtonWidget:
            id: btn_continue
            font_name: "fonts/zekton.ttf"
            font_size: dp(20)
            screen: root
            text: "Continue"
            size_hint: .5, .1
            pos_hint: {"x":.15,"center_y":.5}
            on_touch_up: root.btn_continue_on_touch_up(*args)

<BoardScreen>:
    game_widget: game_widget
    LetterScapeGameWidget:
        id: game_widget

<StartButtonWidget>:
    Label:
        canvas:
            Color:
                rgba: [0.176, 0.804, 0.796, 1]
            Line:
                width: dp(2)
                rounded_rectangle: (self.x, self.y, self.width, self.height, 20)
                joint: 'round'
        font_name: "fonts/zekton.ttf"
        text: root.text  
        size: root.size
        pos: root.pos
        font_size: root.font_size

<LetterScapeGameWidget>:
    gly_tiles: gly_tiles
    canvas.before:
        Color:
            rgba: 0.110, 0.129, 0.188, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation:'vertical'
        size: root.size
        pos: root.pos
        BoxLayout:
            size_hint: 1, 0.1
        BoxLayout:
            orientation:'horizontal'
            size_hint: 1, 0.2
            Label:
                canvas.before:
                    Color:
                        rgba: 0.176, 0.804, 0.796, 1
                    Line:
                        width: dp(1)
                        circle: (self.center_x, self.center_y, (self.height-10)/2)
                font_name: "fonts/zekton.ttf"
                color: [0.176, 0.804, 0.796, 1]
                text: str(root.level)
                font_size: dp(30)
            Label:
                canvas.before:
                    Color:
                        rgba: 0.176, 0.804, 0.796, 1
                    Line:
                        width: dp(1)
                        circle: (self.center_x, self.center_y, (self.height-10)/2)
                    Line:
                        width: dp(3)
                        cap: 'round'
                        circle: (self.center_x, self.center_y, (self.height-10)/2, 0, 360 * ((root.challenge-1) / (root.level_challenges if root.level_challenges > 0 else 1)))
                font_name: "fonts/zekton.ttf"
                color: [0.176, 0.804, 0.796, 1]
                text: str(root.challenge)
                font_size: dp(30) 
            Label:
                canvas.before:
                    Color:
                        rgba: 0.176, 0.804, 0.796, 1
                    Line:
                        width: dp(1)
                        circle: (self.center_x, self.center_y, (self.height-10)/2)
                    Line:
                        width: dp(3)
                        cap: 'round'
                        circle: (self.center_x, self.center_y, (self.height-10)/2, (30 * (root.timer % 12)), (30 * (root.timer % 12)) + 30)
                font_name: "fonts/zekton.ttf"
                color: [0.176, 0.804, 0.796, 1]
                text: str(root.timer)
                font_size: dp(30)
        Label:
            font_name: "fonts/zekton.ttf"
            color: [0.176, 0.804, 0.796, 1]
            size_hint: 1, 0.2
            text: str(root.word)
            font_size: dp(35)   
        GridLayout:
            id: gly_tiles
            spacing: dp(5),dp(5)
            padding: dp(10)
        BoxLayout:
            size_hint: 1, 0.30
        

<TileWidget>:
    canvas:
        Color:
            rgba: self.c
        Line:
            width: dp(1)
            rounded_rectangle: (self.x, self.y, self.width, self.height, 20)
            joint: 'round'
    Label:
        font_name: "fonts/zekton.ttf"
        color: root.c
        center: root.center
        text: root.letter
        font_size: dp(35) 


